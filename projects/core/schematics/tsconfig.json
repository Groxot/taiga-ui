{
    "compilerOptions": {
        "lib": ["es2017"],
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "../../../dist/core/schematics",
        "rootDir": "./",
        "resolveJsonModule": true,
        "noEmitOnError": false,
        "strictNullChecks": true,
        "noImplicitReturns": true,
        "skipDefaultLibCheck": true,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "skipLibCheck": true,
        "sourceMap": true,
        "declaration": true,
        "target": "es6",
        "types": ["jasmine", "node"],
        "baseUrl": "."
    },
    "include": ["**/*.ts", "**/*.js", "./ng-add/schema.json", "./collection.json"]
}
